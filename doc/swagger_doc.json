{
    "openapi": "3.1.0",
    "info": {
        "title": "My API",
        "version": "1.0.0",
        "description": "API documentation for my project"
    },
    "servers": [{
        "url": "http://localhost:3000",
        "description": "Development server"
    }],
    "components": {
        "schemas": {
            "Identifiant": {
                "type": "string",
                "example": "6703a29a34d7f32fe3e4967f"
            },
            "User": {
                "type": "object",
                "properties": {
                    "_id": {
                        "$ref": "#/components/schemas/Identifiant"
                    },
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "Post": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "author": {
                        "$ref": "#/components/schemas/Identifiant"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "Gaming"
                        }
                    },
                    "created_at": {
                        "type": "date-time"
                    },
                    "updated_at": {
                        "type": "date-time"
                    }
                }
            }
        }
    },
    "paths": {
        "/users/register": {
            "post": {
                "summary": "Register new User",
                "description": "Register new User",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "Example"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "example@exmaple.com"
                                    },
                                    "passsword": {
                                        "type": "string",
                                        "example": "1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A User",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "summary": "Login",
                "description": "Login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "example@exmaple.com"
                                    },
                                    "passsword": {
                                        "type": "string",
                                        "example": "1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A JWT Token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "accessToken": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiJ9.NjcwM2E5YjMxYzhjMmJmMjBmZmIyNjNl.sVU37ysOGrAaJO5uznmjX_vfrWQ7kz8I9QPBCSQ6Axo"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Get User",
                "description": "Get User",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "UserID",
                        "schema:": {
                            "$ref": "#/components/schemas/Identifiant"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }, 
            "put": {
                "summary": "Delete User",
                "description": "Delete User",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "UserID",
                        "schema:": {
                            "$ref": "#/components/schemas/Identifiant"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "Example"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "example@exmaple.com"
                                    },
                                    "passsword": {
                                        "type": "string",
                                        "example": "1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete User",
                "description": "Delete User",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "UserID",
                        "schema:": {
                            "$ref": "#/components/schemas/Identifiant"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    }
                }
            }
        }
    }
}